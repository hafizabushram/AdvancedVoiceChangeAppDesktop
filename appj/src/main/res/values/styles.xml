<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color_dark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorControlNormal">@color/main_color_icon</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/main_color_icon</item>
    </style>

    <style name="Widget.RaisedButton" parent="@android:style/Widget.Material.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/raised_button_background</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_xmedium</item>
        <item name="android:paddingLeft">@dimen/spacing_double</item>
        <item name="android:paddingRight">@dimen/spacing_double</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>


    <style name="AlertDialogCustom">
        <item name="colorAccent">@color/main_color_dark</item>
    </style>


</resources>
