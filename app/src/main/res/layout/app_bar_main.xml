<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">


    <RelativeLayout
        android:id="@+id/RL_appbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:fontFamily="@font/sf_regular"
            android:text="@string/app_name"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_18ssp" />

        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_18sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_12sdp"
            android:padding="@dimen/_8sdp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/my_image"
            android:src="@drawable/ic_side_menu_button" />

        <ImageButton
            android:id="@+id/menuSearchButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_18sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_8sdp"
            android:layout_margin="@dimen/_12ssp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/my_image"
            android:src="@drawable/ic_baseline_search_24"
            android:visibility="gone" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/saveAnimation"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_12ssp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_height="wrap_content"
            app:layout_constraintHeight_max="@dimen/_150sdp"
            app:layout_constraintHeight_min="@dimen/_130sdp"
            app:layout_constraintWidth_max="@dimen/_150sdp"
            app:layout_constraintWidth_min="@dimen/_130sdp"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/ic_save_btn"
            app:lottie_repeatCount="@integer/google_play_services_version" />


    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>